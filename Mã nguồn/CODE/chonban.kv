MDScreen:
    name:"chonban"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color: "Custom"
            text_color:rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction="right"
                root.manager.current="main"
        MDLabel:
            text: "Xin chào quý khách!"
            font_size:"26sp"
            pos_hint:{"center_y":.85}
            halign:"center"
            color: rgba(0,0,59,255)
        MDLabel:
            text: "Vui lòng nhập số thứ tự bàn và yêu cầu cần thiết"
            font_size:"18sp"
            pos_hint:{"center_y":.79}
            halign:"center"
            color: rgba(135,135,135,255)
        MDFloatLayout:
            size_hint:.7,.07
            pos_hint:{"center_x":.5,"center_y":.63}
            TextInput:
                id:soban
                hint_text:"Nhập số bàn"
                size_hint_y:.75
                pos_hint:{"center_x":.43,"center_y":.5}
                background_color:1,1,1,0
                foreground_color:rgba(0,0,59,255)
                cursor_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_size:"2sp"
                multiline:False
            MDFloatLayout:
                pos_hint:{"center_x":.45,"center_y":.0}
                size_hint_y:.03
                md_bg_color:rgba(178,178,178,255)
        MDFloatLayout:
            size_hint:.7,.07
            pos_hint:{"center_x":.5,"center_y":.5}
            TextInput:
                hint_text:"Yêu cầu đặc biệt"
                size_hint_y:.75
                pos_hint:{"center_x":.43,"center_y":.5}
                background_color:1,1,1,0
                foreground_color:rgba(0,0,59,255)
                cursor_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_size:"2sp"
                multiline:False
            MDFloatLayout:
                pos_hint:{"center_x":.43,"center_y":.0}
                size_hint_y:.03
                md_bg_color:rgba(178,178,178,255)
        Button:
            text:"Hoàn tất"
            size_hint:0.3,0.065
            pos_hint:{"center_x":.5,"center_y":.34}
            background_clor:0,0,0,0
            on_release:
                root.manager.transition.direction="left"
                root.manager.current=app.themsoban(soban)
            canvas.before:
                Color:
                    rgb:rgba(52,0,231,255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]