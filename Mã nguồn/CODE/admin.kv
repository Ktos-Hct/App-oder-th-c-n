

MDScreen:
    name:"admin"
    MDBoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            MDFloatLayout:
                md_bg_color: 1,1,1,1
                MDIconButton:
                    icon:"replay"
                    pos_hint:{"center_y":.95}
                    user_font_size:"30sp"
                    theme_text_color: "Custom"
                    text_color:rgba(26,24,58,255)
                    on_release:
                        root.manager.transition.direction="right"
                        root.manager.current=app.endgame(listbep)
                MDLabel:
                    text: "Màn hình Admin!"
                    font_size:"26sp"
                    pos_hint:{"center_y":.85}
                    halign:"center"
                    color: rgba(0,0,59,255)
                MDLabel:
                    id:listbep
                    text: ""
                    font_size:"18sp"
                    pos_hint:{"center_y":.79}
                    halign:"center"
                    color: rgba(135,135,135,255)
        # bottom navigation appbar
        MDBoxLayout:
            size_hint_y:None
            md_bg_color:.9,.9,.9,1
            height:dp(60)
            padding:[0,0,0,15]
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'home'
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                MDLabel:
                    text:'Trang Chủ'
                    valign:"center"
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'account'
                    on_release:
                        root.manager.transition.direction="left"
                        root.manager.current="taikhoan"
                MDLabel:
                    text:'Tài khoản'
                    valign:"center"
                    halign:"center"
