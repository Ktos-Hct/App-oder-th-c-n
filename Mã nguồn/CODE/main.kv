MDScreen:
    name:"main"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source:"images/hinhnen.png"
            pos_hint:{"center_x":.5,"center_y":.65}
        MDLabel:
            text: "Xin chào"
            font_size:"23sp"
            pos_hint:{"center_y":.38}
            halign:"center"
            color: rgba(34,34,34,255)
        MDLabel:
            text: "Xin vui lòng nhấn vào Guest để chọn món!"
            font_size:"13sp"
            size_hint_x:0.85
            pos_hint:{"center_x":.5,"center_y":.3}
            halign:"center"
            color: rgba(34,34,34,255)
        Button:
            text:"ADMIN"
            size_hint:0.66,0.065
            pos_hint:{"center_x":.5,"center_y":.18}
            background_clor:0,0,0,0
            on_release:
                root.manager.transition.direction="left"
                root.manager.current="Dangnhap"
            canvas.before:
                Color:
                    rgb:rgba(52,0,231,255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
        Button:
            text:"Guest"
            size_hint:0.66,0.065
            pos_hint:{"center_x":.5,"center_y":.08}
            background_clor:0,0,0,0
            on_release:
                root.manager.transition.direction="left"
                root.manager.current="chonban"
            canvas.before:
                Color:
                    rgb:rgba(52,0,231,255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]

